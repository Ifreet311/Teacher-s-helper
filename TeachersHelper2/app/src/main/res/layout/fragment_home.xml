    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView_home"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="25dp"
        android:background="#FFB7CD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_home">

        <ImageButton
            android:id="@+id/home_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="-139dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/home"
            android:src="@drawable/icon_home"
            app:strokeColor="#000000"
            tools:ignore="ExtraText" />

        <ImageButton
            android:id="@+id/search_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/search"
            android:src="@drawable/icon__search"
            app:strokeColor="#000000"
            tools:ignore="ExtraText" />

        <ImageButton
            android:id="@+id/flow_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="139dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/settings"
            android:src="@drawable/icon_flow"
            app:strokeColor="#000000"
            tools:ignore="ExtraText" />

        <View
            android:id="@+id/view_home"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="#56F6216C" />


    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="18dp"
        android:background="#FFB7CD"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText,MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="0.6dp"
            android:contentDescription="@string/Main_screen"
            android:text="@string/Main_screen"
            android:textColor="@color/black"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout_home"
        android:layout_width="410dp"
        android:layout_height="0dp"
        android:maxWidth="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_home"
        tools:ignore="ExtraText,MissingConstraints">

        <Button
            android:id="@+id/subject"
            android:layout_width="358dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:contentDescription="subject"
            android:text="Предметы"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:backgroundTint="#FFE9EF"
            app:cornerRadius="0dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/marks"
            android:layout_width="358dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:contentDescription="mark"
            android:text="Оценки"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:backgroundTint="#FFE9EF"
            app:cornerRadius="0dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/chat"
            android:layout_width="358dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:contentDescription="subject"
            android:text="@string/rofl_chat"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:backgroundTint="#FFE9EF"
            app:cornerRadius="0dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>